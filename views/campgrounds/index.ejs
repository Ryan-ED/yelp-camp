<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to Yelp Camp!</h1>
            <p>View our best campgrounds</p>
            <p><a href="/campgrounds/new" class="btn btn-primary btn-lg">Add a new camp</a></p>
        </div>
    </header>

    <div class="text-center">
        <h3>Our most popular camp-sites!</h3>
    </div>
    <div id="camp-index" class="row text-center">
        <% camps.forEach(function(camp){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src=<%= camp.image %> alt="Campground picture">
                    <div class="caption"><h4><%= camp.name %></h4></div>
                    <a class="btn btn-info" href="campgrounds/<%= camp._id %>">More Info</a>
                </div>
            </div>
        <% }); %>
    </div>
</div>


<% include ../partials/footer %>
