<% include ../partials/header %>

<div class="container text-center">
    <h1>Add a new campground</h1>
    <form action="/campgrounds" method="post" class="form-horizontal forms">
        <div class="form-group">
            <input class="form-control" type="text" name="name" placeholder="Name of camp" required>
        </div>
        <div class="form-group">
            <input class="form-control" type="url" name="image" placeholder="Image URL" required>            
        </div>
        <div class="form-group">
            <input class="form-control" type="number" name="price" placeholder="Price $" min="0.00" step="0.01" required>
        </div>
        <div class="form-group">
            <input class="form-control" type="text" name="description" placeholder="Description" required>
        </div>
        <div class="form-group">
            <input class="btn btn-primary btn-block" type="submit" value="Submit!">
        </div>
    </form>

    <a href="/campgrounds">Go Back</a>
</div>

<% include ../partials/footer %>
