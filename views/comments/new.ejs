<% include ../partials/header %>

<div class="container text-center">
    <h1>Add a new comment to <%= camp.name %></h1>
    <form action="/campgrounds/<%= camp._id %>/comments" method="post" class="form-horizontal" style="margin: 30px auto; width:30%">
        <div class="form-group">
            <input class="form-control" type="text" name="comment[text]" placeholder="Enter the comment">
        </div>
        <div class="form-group">
            <input class="btn btn-primary btn-block" type="submit" value="Submit!">
        </div>
    </form>

    <a href="/campgrounds/<%= camp._id %>">Go Back</a>
</div>

<% include ../partials/footer %>
