<% include ../partials/header %>

<div class="container text-center">
    <h1>Edit comment</h1>
    <form action="/campgrounds/<%= campId %>/comments/<%= comment._id %>?_method=PUT" method="post" class="form-horizontal forms">
        <div class="form-group">
            <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>" placeholder="Enter the comment">
        </div>
        <div class="form-group">
            <input class="btn btn-primary btn-block" type="submit" value="Submit!">
        </div>
    </form>

    <a href="/campgrounds/<%= campId %>">Go Back</a>
</div>

<% include ../partials/footer %>